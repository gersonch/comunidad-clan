---
import LogoBlanco from "./LogoBlanco.astro";

interface Props {
    textColor: string;
    bg: string;
    fixed: string;
    top: string;
}

const { textColor, bg, fixed, top } = Astro.props
---

<header class=`${fixed} ${top} w-full z-40 h-screen`>
    <nav class=`nav px-12 h-16 flex justify-between font-semibold items-center text-center ${textColor} ${bg} `>
        <div>
            <a href="#" class="grow basis-0 z-40 ">
                <LogoBlanco />
            </a>
        </div>

        <!--menu dispositivos pequeños -->

         <div id="dropDownMenu" class="nav-bar hidden top-[50%] left-[50%] absolute bg-[url(../bg-burger.jpg)] bg-cover h-screen w-full flex-col items-center justify-center animate-fade animate-duration-[300ms] animate-ease-in" >
            <ul class=" flex flex-col gap-6 text-2xl">    
                <li>
                    <a href="/" >Inicio</a>
                </li>
                <li class="text-center">
                    <a href="../sobre-nosotros" class="">
                        Sobre Nosotros</i></a>   
                </li>
                <li>
                    <a href="../eventos" class="">Eventos</a>
                </li>
                <li>
                    <a href="../contactanos" class="">Contáctanos</a>
                </li>
            </ul>
            
        </div>


        <!--menu dispositivos grandes -->

        <div class="hidden lg:flex">
            <ul class="flex px-6 gap-8 text-md">    
                <li>
                    <a href="/" >Inicio</a>
                </li>
                <li class="text-center">
                    <a href="../sobre-nosotros" class="">
                        Sobre Nosotros</i></a>   
                </li>
                <li>
                    <a href="../eventos" class="">Eventos</a>
                </li>
                <li>
                    <a href="../contactanos" class="">Contáctanos</a>
                </li>
            </ul>
            
        </div>
        
        <div class="flex justify-end lg:hidden text-white grow basis-0 z-50">
            <i id="toggleBtn" class=" fa-solid fa-bars text-2xl"></i>
        </div>
    </nav>
    
    <style>
        .nav-bar{
            transform: translate(-50%, -50%); 
            
        }
    </style>



    <script>
        const toggleBtn = document.getElementById("toggleBtn")
        const drpMenu = document.getElementById("dropDownMenu")
        
    
        toggleBtn.addEventListener("click", () => {
            if(drpMenu.style.display === "none"){
                drpMenu.style.display = "flex"
            
            } else{
                drpMenu.style.display = "none" 
            }
            })
        
       
    </script>
</header>

