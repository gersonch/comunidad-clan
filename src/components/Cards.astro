---
interface Props {
    title: string;
    url: string;
    año: string;
}
const { title, url, año } = Astro.props
---

<div class="my-4 flex flex-col justify-center text-center gap-4">
    <iframe width="350" height="200" src={url} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    <h2>{title}</h2>
    <p class="text-gray-400 text-sm">{año}</p>
</div>