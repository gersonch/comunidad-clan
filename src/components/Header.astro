---
import LogoBlanco from "./LogoBlanco.astro";
---

<header class="fixed top-0 w-full z-40 ">
    <nav class="px-12 h-16 flex justify-between font-semibold items-center text-center text-white relative">
        <div>
            <a href="#" class="grow basis-0">
                <LogoBlanco />
            </a>
        </div>

        <div id="dropDownMenu" class="absolute lg:static lg:w-auto flex left-0 -top-[1000px] lg:bg-transparent bg-[#ffffff20] w-full flex-col items-center text-center gap-6 ">
            <ul class="flex flex-col lg:flex-row gap-8 my-2 lg:grow basis-0">
                <li><a href="#" class="hover:bg-gray-500 hover:transition px-3 py-1 rounded-xl" >Inicio</a></li>
                <li><a href="#" class="whitespace-nowrap hover:bg-gray-500 hover:transition px-3 py-1 rounded-xl">Sobre Nosotros</a></li>
                <li><a href="#" class="hover:bg-gray-500 hover:transition px-3 py-1 rounded-xl">Eventos</a></li>
                <li><a href="#" class="hover:bg-gray-500 hover:transition px-3 py-1 rounded-xl">Cont√°ctanos</a></li>
            </ul>
        </div>
        
        <div class="flex justify-end lg:hidden text-white grow basis-0">
            <i id="toggleBtn" class=" fa-solid fa-bars text-2xl"></i>
        </div>
    </nav>

    <script>
        const toggleBtn = document.getElementById("toggleBtn")
        const drpMenu = document.getElementById("dropDownMenu")
        
    
        toggleBtn.addEventListener("click", () => {
            drpMenu.classList.toggle("top-16")
        })
    </script>
</header>

