---
import LogoBlanco from "./LogoBlanco.astro";

interface Props {
    textColor: string;
}

const { textColor } = Astro.props
---

<header class="fixed top-0 w-full z-40">
    <nav class=`px-12 h-16 flex justify-between font-semibold items-center text-center ${textColor} relative`>
        <div>
            <a href="#" class="grow basis-0">
                <LogoBlanco />
            </a>
        </div>

        <div id="dropDownMenu" class="absolute lg:static lg:w-auto flex left-0 -top-[1000px] lg:bg-transparent bg-[#ffffff20] w-full flex-col items-center text-center gap-6 ">
            <ul class="flex flex-col lg:flex-row gap-8 my-2 lg:grow basis-0">
                <li>
                    <a href="#" class="hover:bg-gray-500 hover:transition px-4 py-2 rounded-xl" >Inicio</a>
                </li>
                <li>
                    <a href="../sobre-nosotros" class="whitespace-nowrap hover:bg-gray-500 hover:transition px-4 py-2 rounded-xl">Sobre Nosotros</a>
                </li>
                <li>
                    <a href="../eventos" class="hover:bg-gray-500 hover:transition px-4 py-2 rounded-xl">Eventos</a>
                </li>
                <li>
                    <a href="../contactanos" class="hover:bg-gray-500 hover:transition px-4 py-2 rounded-xl">Cont√°ctanos</a>
                </li>
            </ul>
        </div>
        
        <div class="flex justify-end lg:hidden text-white grow basis-0">
            <i id="toggleBtn" class=" fa-solid fa-bars text-2xl"></i>
        </div>
    </nav>

    <script>
        const toggleBtn = document.getElementById("toggleBtn")
        const drpMenu = document.getElementById("dropDownMenu")
        
    
        toggleBtn.addEventListener("click", () => {
            drpMenu.classList.toggle("top-16")
        })
    </script>
</header>

